---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button";
const num = 1;
const ppl = ["Bob", "Joe", "May"];
const response = await fetch(
	"https://jsonplaceholder.typicode.com/users?_limit=10"
);
const users = await response.json();
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Welcome to <span class="text-gradient">Astro</span></h1>
		<section class="mb-5">
			<h3 class="text-3xl">page link</h3>
			<a class="link" href="/about">about page</a>
		</section>
		<section class="mb-5">
			<h3 class="text-3xl">variables</h3>
			<p>num : {num}</p>
			<p>person name:</p>
			<ul>
				{ppl.map((item) => <li>-{item}</li>)}
			</ul>
		</section>
		<section class="mb-5">
			<h3 class="text-3xl">client-side JS</h3>
			<p>paragraph : <span id="paragraph"></span></p>
			<p>copyright:<span id="copyright"></span></p>
		</section>
		<section class="mb-5">
			<h3 class="text-3xl">React component</h3>
			<span>click to add number :</span><Button client:load />
		</section>
		<section class="mb-5">
			<h3 class="text-3xl">fetch users data:</h3>
			<ul>
				{users.map((user) => <li>-{user.name}</li>)}
			</ul>
		</section>
	</main>
</Layout>

<style lang="scss">
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link {
		color: goldenrod;
		&:hover {
			color: blue;
		}
	}
</style>

<script>
	import "../js/utils.js";

	const p = document.querySelector("#paragraph");
	p.textContent = "hi2";
</script>
